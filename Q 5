ORG 0000H
MOV R0, #40H
MOV R1, #40H
MOV R2, #20H
SCAN_LOOP:
    MOV A, @R0
    CJNE A, #0FFH, KEEP_DATA
    SJMP NEXT_BYTE
KEEP_DATA:
    MOV @R1, A
    INC R1
NEXT_BYTE:
    INC R0
    DJNZ R2, SCAN_LOOP
MOV A, #00H
FILL_ZERO:
    CJNE R1, #60H, ADD_ZERO
    SJMP DONE
ADD_ZERO:
    MOV @R1, A
    INC R1
    SJMP FILL_ZERO
DONE:
    HERE: SJMP HERE
END
